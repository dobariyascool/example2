<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:padding">@dimen/control_SpecingSmall</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<style name="RadioButton" parent="Material.Drawable.RadioButton">-->
        <!--<item name="rbd_width">32dp</item>-->
        <!--<item name="rbd_height">32dp</item>-->
        <!--<item name="rbd_strokeSize">2dp</item>-->
        <!--<item name="rbd_radius">10dp</item>-->
        <!--<item name="rbd_innerRadius">5dp</item>-->
        <!--<item name="rbd_strokeColor">@color/colorAccent</item>-->
        <!--&lt;!&ndash;<item name="rbd_animDuration">@android:integer/config_mediumAnimTime</item>&ndash;&gt;-->
    <!--</style>-->

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolBarWithImage" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:fontFamily">Roboto-Regular</item>-->
    </style>

    <style name="EditTextToogleButton">
        <item name="android:layout_height">@dimen/tbutton_Height</item>
        <item name="android:layout_width">@dimen/tbutton_Width</item>
        <item name="android:layout_marginTop">@dimen/tbutton_MarginTop</item>
        <item name="android:text">""</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>

    <style name="ProgressView" parent="@style/Material.Drawable.CircularProgress">
        <item name="cpd_strokeColors">@array/colorArray</item>
        <item name="cpd_strokeSize">4dp</item>
    </style>

    <style name="AppCompactCardView">android.support.v7.CardView</style>

    <style name="DefaultCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <!--<item name="android:layout_marginBottom">@dimen/card_Margin</item>-->
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="EditText" parent="Material.Widget.EditText.Light">
        <item name="cet_spanHeight">32dp</item>
        <item name="cet_spanMaxWidth">150dp</item>
        <item name="cet_spanPaddingLeft">8dp</item>
        <item name="cet_spanPaddingRight">12dp</item>
        <item name="cet_spanTextSize">14sp</item>
        <item name="cet_spanTextColor">@color/colorPrimaryDark</item>
        <item name="cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="cet_spanSpacing">4dp</item>
        <item name="et_supportMode">helper</item>
        <item name="et_supportTextErrorColor">@color/error_text</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="et_dividerErrorColor">@color/error_text</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="et_labelTextColor">@color/colorPrimaryDark</item>
        <item name="et_labelEnable">true</item>
        <item name="et_labelPadding">0dp</item>
        <item name="et_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="EditTextWithoutError" parent="Material.Widget.EditText.Light">
        <item name="cet_spanHeight">32dp</item>
        <item name="cet_spanMaxWidth">150dp</item>
        <item name="cet_spanPaddingLeft">8dp</item>
        <item name="cet_spanPaddingRight">12dp</item>
        <item name="cet_spanTextSize">14sp</item>
        <item name="cet_spanTextColor">@color/colorPrimaryDark</item>
        <item name="cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="cet_spanSpacing">4dp</item>
        <item name="et_supportMode">none</item>
        <item name="et_supportTextErrorColor">@color/error_text</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="et_dividerErrorColor">@color/error_text</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="et_labelTextColor">@color/colorPrimaryDark</item>
        <item name="et_labelEnable">false</item>
        <item name="et_labelPadding">0dp</item>
        <item name="et_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="CompoundButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rd_rippleColor">@color/primary_light</item>
        <item name="rd_rippleType">touch</item>
        <item name="rd_enable">true</item>
        <item name="rd_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_outInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_padding">0dp</item>
        <item name="android:textSize">@dimen/control_TextMedium</item>
        <item name="rd_delayClick">none</item>
    </style>

    <style name="Spinner" parent="Material.Widget.Spinner.Light">
        <item name="cet_spanHeight">32dp</item>
        <item name="cet_spanMaxWidth">150dp</item>
        <item name="cet_spanPaddingLeft">8dp</item>
        <item name="cet_spanPaddingRight">12dp</item>
        <item name="cet_spanTextSize">14sp</item>
        <item name="cet_spanTextColor">@color/colorPrimaryDark</item>
        <item name="cet_spanBackgroundColor">#FFE0E0E0</item>
        <item name="cet_spanSpacing">4dp</item>
        <item name="et_supportMode">helper</item>
        <item name="et_supportTextErrorColor">@color/error_text</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="et_dividerErrorColor">@color/error_text</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="et_labelTextColor">@color/colorPrimaryDark</item>
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave.Light</item>
        <item name="rd_enable">true</item>
        <item name="rd_delayClick">none</item>
        <item name="spn_popupItemAnimation">@anim/abc_fade_in</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialTabLayout">android.support.design.widget.TabLayout</style>

    <style name="TabLayout" parent="MaterialTabLayout">
        <item name="tabIndicatorColor">@color/colorAccentLight</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="tabTextAppearance">@style/TabLayoutTextStyle</item>-->
    </style>

    <style name="FloatingActionButton">com.github.clans.fab.FloatingActionButton</style>

    <style name="FloatingActionMenu">com.github.clans.fab.FloatingActionMenu</style>

    <style name="FloatingMenu" parent="FloatingActionMenu">
        <item name="menu_backgroundColor">@color/transparentBackground</item>
        <item name="menu_colorNormal">@color/orange</item>
        <item name="menu_colorPressed">@color/orange_light</item>
        <item name="menu_colorRipple">@color/orange_light</item>
        <item name="menu_labels_ellipsize">end</item>
        <item name="menu_labels_hideAnimation">@anim/jump_to_down</item>
        <item name="menu_labels_position">left</item>
        <item name="menu_labels_showAnimation">@anim/jump_from_down</item>
        <item name="menu_labels_singleLine">true</item>
    </style>

    <style name="FloatingButtonWithTextStyle" parent="FloatingActionButton">
        <item name="fab_colorNormal">@android:color/white</item>
        <item name="rd_rippleColor">@android:color/white</item>
        <item name="rd_cornerRadius">@dimen/fbutton_cornerRadius</item>
        <item name="android:height">@dimen/fbuttonMini_Height</item>
        <item name="android:minHeight">@dimen/fbuttonMini_Height</item>
        <item name="android:layout_marginEnd">@dimen/fbutton_MarginBottomEnd</item>
        <item name="android:layout_marginBottom">@dimen/fbutton_MarginBottomEndTablet</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorPressed">@android:color/white</item>
        <item name="fab_colorRipple">@android:color/white</item>
    </style>

    <style name="CardViewTransparent" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="cardBackgroundColor">@color/transparent_orange</item>
        <item name="android:foreground">@drawable/category_item_ripple_effect</item>
    </style>

    <style name="AddButton" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/control_TextSmall</item>
        <item name="android:radius">2dp</item>
        <item name="rd_enable">true</item>
        <item name="rd_rippleType">wave</item>
        <item name="rd_rippleColor">@color/colorAccentDark</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingTiny</item>
        <!--<item name="android:fontFamily">Roboto-Regular</item>-->
    </style>

    <style name="DisableButton" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/control_TextSmall</item>
        <item name="android:radius">2dp</item>
        <item name="rd_enable">false</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="android:background">@color/colorAccentDark</item>
        <item name="android:layout_marginTop">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingTiny</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingTiny</item>
        <!--<item name="android:fontFamily">Roboto-Regular</item>-->
    </style>

    <style name="DialogButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#009688</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">@dimen/dialog_button_padding_top</item>
        <item name="android:paddingEnd">@dimen/dialog_button_padding_end</item>
        <item name="android:paddingBottom">@dimen/dialog_button_padding_bottom</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="cbd_boxSize">14dp</item>
        <item name="cbd_width">25dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="cbd_height">25dp</item>
    </style>

    <style name="Add" parent="@style/Material.Drawable.RadioButton"/>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="rbd_radius">7dp</item>
        <item name="rbd_width">25dp</item>
        <item name="rbd_height">25dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="rbd_animDuration">200</item>
    </style>

    <style name="MaterialButton">com.rey.material.widget.Button</style>
    <style name="NumberButton" parent="MaterialButton">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="rd_enable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="rd_rippleType">wave</item>
        <item name="rd_rippleColor">#90A4AE</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
    </style>

</resources>
