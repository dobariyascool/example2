<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">@dimen/control_SpecingSmall</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingSmall</item>
    </style>

    <style name="DefaultCardView1" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="BusinessInfoCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/offwhite</item>
    </style>


    <style name="CardViewTransparent" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardBackgroundColor">@color/transparent_orange</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:foreground">@drawable/category_item_ripple_effect</item>
    </style>

    <style name="FloatingMiniButton" parent="FloatingActionButton">
        <item name="fab_colorNormal">@color/orange</item>
        <item name="rd_rippleColor">@color/orange_light</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorPressed">@color/orange</item>
        <item name="android:src">@drawable/edit_drawable</item>
        <item name="android:layout_marginTop">162dp</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingSmall</item>
    </style>


    <style name="FloatingButton" parent="FloatingButtonDesignSupport">
        <item name="rippleColor">@color/colorAccentDark</item>
        <item name="fabSize">normal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/control_SpecingSmall</item>
    </style>

</resources>
