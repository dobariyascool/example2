<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/control_SpecingTiny"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_SpecingTiny"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <com.rey.material.widget.TextView
                android:id="@+id/txtCustomerAddressTranId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHomeOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                     />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_toEndOf="@+id/ivHomeOffice"
                    android:textColor="@color/brown"
                    tools:ignore="RelativeOverlap" />

                <com.rey.material.widget.ImageButton
                    android:id="@+id/ibEditAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:background="@android:color/white"
                    android:src="@drawable/edit_drawable" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/control_SpecingTiny">

                <ImageView
                    android:id="@+id/ivCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_drawable" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtCustomerName"
                    style="@style/HeaderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/control_TextMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@drawable/address_drawable" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtCustomerAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown_light"
                        android:textSize="15sp" />
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/txtArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingLarge"
                    android:textColor="@color/brown_light"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingLarge"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown_light" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtZipCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown_light" />

                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/txtState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/control_SpecingLarge"
                    android:textColor="@color/brown_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/control_SpecingTiny">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/call_drawable" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/brown_light" />

            </LinearLayout>

        </LinearLayout>

        <com.rey.material.widget.ImageButton
            android:id="@+id/ibDeleteAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/offwhite"
            android:padding="@dimen/control_SpecingSmall"
            android:src="@drawable/cancel_drawable"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>