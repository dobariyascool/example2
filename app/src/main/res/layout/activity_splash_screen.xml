<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spash_delicious"
    tools:context="com.arraybit.pos.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="end|bottom|center">

        <ImageView
            android:id="@+id/ivCompany"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/control_SpecingSmall"
            android:layout_marginEnd="@dimen/control_SpecingSmall"
            android:layout_marginTop="@dimen/control_SpecingSmall"
            android:contentDescription="@string/app_name"
            android:scaleType="fitEnd"
            android:src="@drawable/cmp_logo" />
        <ImageView
            android:id="@+id/ivCompanyLogo"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/control_SpecingTiny"
            android:layout_marginEnd="@dimen/control_SpecingSmall"
            android:layout_marginTop="@dimen/control_SpecingSmall"
            android:contentDescription="@string/app_name"
            android:gravity="start|center"
            android:scaleType="fitStart"
            android:src="@drawable/arraybit_text" />
    </LinearLayout>
</RelativeLayout>