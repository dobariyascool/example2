<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arraybit.abposw.WriteReviewFragment">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RatingBar
            android:id="@+id/rtbReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/control_SpecingMedium"
            android:layout_marginStart="@dimen/control_SpecingMedium"
            android:layout_marginTop="@dimen/control_SpecingMedium"
            android:max="5" />

        <com.rey.material.widget.EditText
            android:id="@+id/etReview"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rfReview"
            android:inputType="text"
            android:paddingEnd="@dimen/control_SpecingMedium"
            android:paddingStart="@dimen/control_SpecingMedium"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:gravity="center|end"
            android:orientation="horizontal">

            <com.rey.material.widget.Button
                android:id="@+id/btnReviewClose"
                style="@style/DialogButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:text="@string/rfClose" />

            <com.rey.material.widget.Button
                android:id="@+id/btnReviewSubmit"
                style="@style/DialogButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:text="@string/rfSubmit" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
