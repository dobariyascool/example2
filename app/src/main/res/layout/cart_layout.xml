<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/cart_with_ripple_drawable"
    android:orientation="vertical"
    android:paddingEnd="@dimen/control_SpecingMedium"
    android:paddingStart="@dimen/control_SpecingMedium">

    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/empty_cart"
        android:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/ivMain"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cart_layout"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

    <com.rey.material.widget.TextView
        android:id="@+id/txtCartNumber"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/ivMain"
        android:layout_alignTop="@+id/ivMain"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@color/error_text"
        android:textSize="9sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />
</RelativeLayout>