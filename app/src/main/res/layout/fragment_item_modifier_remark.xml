<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemModifierRemarkFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivItem"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/control_SpecingSmall"
                    android:orientation="vertical">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtItemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/control_SpecingSmall" />

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtItemRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/control_SpecingSmall" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginEnd="@dimen/control_SpecingTiny"
                        android:layout_marginStart="@dimen/control_SpecingTiny"
                        android:layout_marginTop="@dimen/control_SpecingTiny"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/control_SpecingSmall"
                        android:paddingStart="@dimen/control_SpecingSmall">

                        <com.rey.material.widget.ImageButton
                            android:id="@+id/ibMinus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/minus_drawable"
                            android:layout_weight="1" />

                        <com.rey.material.widget.EditText
                            android:id="@+id/etQuantity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="2"
                            android:text="1"
                            app:et_inputId="@+id/Quantity_input"
                            tools:ignore="HardcodedText" />

                        <com.rey.material.widget.ImageButton
                            android:id="@+id/ibPlus"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus_drawable"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/modifierLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/control_SpecingSmall"
                android:orientation="vertical"
                android:paddingEnd="@dimen/control_SpecingSmall"
                android:paddingStart="@dimen/control_SpecingSmall">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtHeaderModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/control_SpecingTiny"
                        android:paddingStart="@dimen/control_SpecingTiny"
                        android:text="Modifier"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/control_TextMedium"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/ivModifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/control_SpecingSmall"
                        android:src="@drawable/edit_drawable"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/txtModifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingSmall"
                    android:paddingEnd="@dimen/control_SpecingTiny"
                    android:paddingStart="@dimen/control_SpecingTiny"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/control_TextMedium"
                    android:visibility="gone" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvOptionValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/control_SpecingSmall" />

            <com.rey.material.widget.Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/control_SpecingSmall"
                android:layout_weight="1"
                android:text="Add"
                tools:ignore="HardcodedText,InefficientWeight" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
