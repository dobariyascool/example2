<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvOffer"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/control_SpecingTiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/ivOffer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#30000000"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:padding="@dimen/control_SpecingSmall">

                <com.rey.material.widget.TextView
                    android:id="@+id/txtOfferTitle"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/control_TextMedium" />

                <com.rey.material.widget.TextView
                    android:id="@+id/txtOfferContent"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Description"
                    android:textColor="#BDBDBD"
                    android:textSize="@dimen/control_TextSmall"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/control_SpecingTiny"
                    android:layout_marginStart="@dimen/control_SpecingTiny"
                    android:layout_marginTop="@dimen/control_SpecingTiny"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/txtOfferExpiredDate"
                        style="@style/Base.TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:paddingTop="0dp"
                        android:text ="@string/rExpiresOn"
                        android:textColor="@android:color/white"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>