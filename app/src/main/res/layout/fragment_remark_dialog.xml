<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    tools:context="com.arraybit.abposw.RemarkDialogFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.rey.material.widget.EditText
            android:id="@+id/etRemark"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/aiqRemark"
            android:paddingBottom="@dimen/control_SpecingMedium"
            android:paddingEnd="@dimen/control_SpecingMedium"
            android:paddingStart="@dimen/control_SpecingMedium"
            android:paddingTop="@dimen/control_SpecingMedium"
            android:singleLine="true"
            app:et_inputId="@+id/remarkInput" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_layout_height"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            tools:ignore="HardcodedText">

            <com.rey.material.widget.TextView
                android:id="@+id/txtCancel"
                style="@style/DialogTextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:text="@string/msdCancel" />

            <com.rey.material.widget.TextView
                android:id="@+id/txtDone"
                style="@style/DialogTextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_marginEnd="@dimen/control_SpecingSmall"
                android:text="@string/msdDone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
