<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DefaultCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <!--<item name="android:layout_marginBottom">@dimen/card_Margin</item>-->
    </style>

    <style name="CardViewTransparent" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="cardBackgroundColor">@color/transparent_orange</item>
        <item name="android:foreground">@drawable/category_item_ripple_effect</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="cbd_boxSize">14dp</item>
        <item name="android:buttonTint">#d1d1d0</item>
        <item name="android:buttonTintMode">src_in</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="cbd_width">25dp</item>
        <item name="cbd_height">25dp</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="rbd_radius">7dp</item>
        <item name="rbd_width">25dp</item>
        <item name="rbd_height">25dp</item>
        <item name="android:buttonTint">#d1d1d0</item>
        <item name="android:buttonTintMode">src_in</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="rbd_animDuration">200</item>
    </style>

    <style name="AppCompactCardView">android.support.v7.CardView</style>

    <style name="BusinessInfoCardView" parent="AppCompactCardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cardBackgroundColor">@color/offwhite</item>
    </style>


    <style name="BusinessInfoCardView1" parent="CardView">
        <item name="android:layout_height">@dimen/card_MinimumHeight</item>
        <item name="cardCornerRadius">@dimen/card_CornerRadius</item>
        <item name="cardElevation">@dimen/card_Elevation</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="cardBackgroundColor">@color/colorAccentDark</item>
    </style>

    <style name="ButtonStyle" parent="Button" />

    <style name="FloatingButton" parent="FloatingButtonDesignSupport">
        <item name="rippleColor">@color/colorAccentDark</item>
        <item name="fabSize">normal</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:elevation">@dimen/snackbar_elevation</item>
        <item name="android:layout_margin">@dimen/control_SpecingMedium</item>
    </style>

    <style name="FloatingMiniButton" parent="FloatingActionButton">
        <item name="fab_colorNormal">@color/orange</item>
        <item name="rd_rippleColor">@color/orange_light</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorPressed">@color/orange</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">170dp</item>
        <item name="fab_showShadow">true</item>
        <item name="android:layout_marginEnd">@dimen/control_SpecingMedium</item>
        <!--<item name="fab_shadowColor">#66000000</item>-->
        <!--<item name="fab_shadowRadius">4dp</item>-->
        <!--<item name="fab_shadowXOffset">1dp</item>-->
        <!--<item name="fab_shadowYOffset">3dp</item>-->
    </style>
</resources>
