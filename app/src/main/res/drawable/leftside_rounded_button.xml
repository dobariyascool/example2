<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:angle="270.0" android:color="@color/colorAccentDark" />

                    <corners android:topLeftRadius="3dp" />
                </shape>
            </item>
            <!-- my second item is on top right for a fake corner radius(0dp) -->
            <item android:bottom="30dp" android:left="50dp">
                <shape>
                    <solid android:color="@color/colorAccentDark" />
                </shape>
            </item>
            <item android:left="50dp" android:top="30dp">
                <shape>
                    <solid android:color="@color/colorAccentDark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:angle="270.0" android:color="@color/accentSecondaryColor" />

                    <corners android:topLeftRadius="3dp" />
                </shape>
            </item>
            <!-- my second item is on top right for a fake corner radius(0dp) -->
            <item android:bottom="30dp" android:left="50dp">
                <shape>
                    <solid android:color="@color/accentSecondaryColor" />
                </shape>
            </item>
            <item android:left="50dp" android:top="30dp">
                <shape>
                    <solid android:color="@color/accentSecondaryColor" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>