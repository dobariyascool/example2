<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="@color/colorPrimaryDark" />
            <stroke android:width="0.2dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="3" android:useLevel="false">
            <solid android:color="@color/colorAccent" />
            <stroke android:width="0.2dp" android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>